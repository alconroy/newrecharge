<% if spree_current_user %>
  <li class="col-xs-12 col-md-4"><%= link_to Spree.t(:my_account), spree.account_path %></li>
  <li class="col-xs-12 col-md-4"><%= link_to Spree.t(:logout), spree.logout_path %></li>
<% else %>
  <li id="link-to-login" class="col-xs-12 col-md-4"><%= link_to Spree.t(:login), spree.login_path %></li>
<% end %>
